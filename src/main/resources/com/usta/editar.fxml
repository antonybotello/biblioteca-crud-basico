<BorderPane minHeight="480.0" minWidth="640.0" prefHeight="540.0" prefWidth="750.0" style="-fx-background-color: #ae7e3e;" stylesheets="@css/style.css" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.usta.EditarController">
   <top>
      <HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0" spacing="30.0" styleClass="fondo" BorderPane.alignment="CENTER">
         <children>
            <ImageView fitHeight="105.0" fitWidth="112.0" pickOnBounds="true" preserveRatio="true">
               <image>
                  <Image url="@img/logo.png" />
               </image>
            </ImageView>
            <ImageView fitHeight="36.0" fitWidth="210.0" pickOnBounds="true" preserveRatio="true">
               <image>
                  <Image url="@img/titulo.png" />
               </image>
            </ImageView>
            <ImageView fitHeight="36.0" fitWidth="210.0" pickOnBounds="true" preserveRatio="true">
               <image>
                  <Image url="@img/titulo-editar.png" />
               </image>
            </ImageView>
         </children></HBox>
   </top>
   <left>
      <VBox alignment="CENTER" prefHeight="433.0" prefWidth="151.0" styleClass="fondo" BorderPane.alignment="CENTER">
         <children>
            <ImageView fitHeight="47.0" fitWidth="107.0" pickOnBounds="true" preserveRatio="true">
               <image>
                  <Image url="@img/titulo-libros.png" />
               </image>
            </ImageView>
            <Button contentDisplay="CENTER" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" mnemonicParsing="false" onAction="#switchToAgregar" prefHeight="300.0" text="Agregar">
               <VBox.margin>
                  <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
               </VBox.margin>
               <font>
                  <Font name="Times New Roman Bold" size="25.0" />
               </font>
            </Button>
            <Button maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" mnemonicParsing="false" onAction="#switchToListar" prefHeight="300.0" text="Listar">
               <VBox.margin>
                  <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
               </VBox.margin>
               <font>
                  <Font name="Times New Roman Bold" size="25.0" />
               </font>
            </Button>
            <Button maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" mnemonicParsing="false" onAction="#switchToMenu" prefHeight="300.0" text="Menú">
               <VBox.margin>
                  <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
               </VBox.margin>
               <font>
                  <Font name="Times New Roman Bold" size="25.0" />
               </font>
            </Button>
            <Button maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" mnemonicParsing="false" prefHeight="300.0" text="Eliminar">
               <VBox.margin>
                  <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
               </VBox.margin>
               <font>
                  <Font name="Times New Roman Bold" size="25.0" />
               </font>
            </Button>
         </children>
         <BorderPane.margin>
            <Insets />
         </BorderPane.margin>
         <padding>
            <Insets bottom="40.0" top="30.0" />
         </padding>
      </VBox>
   </left>
   <center>
      <VBox prefHeight="433.0" prefWidth="434.0" spacing="20.0" styleClass="fondo" BorderPane.alignment="CENTER">
         <children>
            <GridPane hgap="20.0" prefHeight="156.0" prefWidth="348.0" vgap="20.0">
              <columnConstraints>
                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
              </columnConstraints>
              <rowConstraints>
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                <RowConstraints maxHeight="30.0" minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                <RowConstraints maxHeight="30.0" minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                  <RowConstraints maxHeight="30.0" minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
              </rowConstraints>
               <children>
                  <Label prefHeight="36.0" prefWidth="118.0" text="Nombre" textFill="#e8e8e8">
                     <font>
                        <Font name="System Bold" size="25.0" />
                     </font>
                  </Label>
                  <TextField fx:id="nombreTxt" GridPane.columnIndex="1" />
                  <TextField fx:id="autorTxt" GridPane.columnIndex="1" GridPane.rowIndex="1" />
                  <TextField fx:id="isbnTxt" GridPane.columnIndex="1" GridPane.rowIndex="3" />
                  <Label prefHeight="36.0" prefWidth="118.0" text="Autor" textFill="#e8e8e8" GridPane.rowIndex="1">
                     <font>
                        <Font name="System Bold" size="25.0" />
                     </font>
                  </Label>
                  <Label prefHeight="36.0" prefWidth="118.0" text="Género" textFill="#e8e8e8" GridPane.rowIndex="2">
                     <font>
                        <Font name="System Bold" size="25.0" />
                     </font>
                  </Label>
                  <Label prefHeight="36.0" prefWidth="118.0" text="ISBN" textFill="#e8e8e8" GridPane.rowIndex="3">
                     <font>
                        <Font name="System Bold" size="25.0" />
                     </font>
                  </Label>
                  <ComboBox fx:id="generoCBX" prefHeight="25.0" prefWidth="238.0" GridPane.columnIndex="1" GridPane.rowIndex="2" />
               </children>
            </GridPane>
            <Button mnemonicParsing="false" onAction="#editarLibro" text="Editar">
               <font>
                  <Font name="Times New Roman Bold" size="25.0" />
               </font>
            </Button>
            <TableView fx:id="libroTable" onMouseClicked="#setLibroAEditar" prefHeight="243.0" prefWidth="389.0">
               <columns>
                  <TableColumn fx:id="nombreCol" prefWidth="75.0" text="Nombre" />
                  <TableColumn fx:id="autorCol" prefWidth="75.0" text="Autor" />
                  <TableColumn fx:id="generoCol" prefWidth="75.0" text="Género" />
                  <TableColumn fx:id="isbnCol" prefWidth="75.0" text="isbn" />
               </columns>
               <columnResizePolicy>
                  <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
               </columnResizePolicy>
            </TableView>
         </children>
         <padding>
            <Insets bottom="50.0" left="50.0" right="50.0" top="50.0" />
         </padding>
      </VBox>
   </center>
</BorderPane>
